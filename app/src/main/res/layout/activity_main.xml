<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/accent_material_dark"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/appTitle"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_column="0"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/ageTitle"
            android:id="@+id/textView"
            android:padding="5dp"
            android:textSize="25sp"
            android:layout_span="1"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <EditText
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editAgeText"
                android:layout_gravity="left|bottom"
                android:numeric="integer"
                android:singleLine="true"
                android:maxLength="2" />

        </FrameLayout>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maxTitle"
            android:id="@+id/textView4"
            android:padding="5dp"
            android:textSize="25sp"
            android:layout_span="1"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:id="@+id/textMaxView"
                android:textSize="20sp"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Target Rate (50%) :"
            android:id="@+id/textView2"
            android:padding="5dp"
            android:textSize="25sp"
            android:layout_span="1"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="bottom" >

            <TextView
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:id="@+id/textLowView"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />
        </FrameLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Target Rate (85%):"
            android:id="@+id/textView5"
            android:padding="5dp"
            android:textSize="25sp"
            android:layout_span="1"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:id="@+id/textHighView"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />
        </FrameLayout>
    </TableRow>

</TableLayout>
